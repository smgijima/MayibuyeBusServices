<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cornelious.busbooking">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="ac.cj.cornelious.busbooking.configerations.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="ac.cj.cornelious.busbooking.configerations.ActivityMain"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="ac.cj.cornelious.busbooking.configerations.services.impl.BusIntentService"
            android:exported="false" />
        <service
            android:name="ac.cj.cornelious.busbooking.configerations.services.impl.TicketIntentService"
            android:exported="false" />
        <service
            android:name="ac.cj.cornelious.busbooking.configerations.services.impl.MaintainanceIntentService"
            android:exported="false" />
        <service
            android:name="ac.cj.cornelious.busbooking.configerations.services.impl.PassengerIntentService"
            android:exported="false" />
        <service
            android:name="ac.cj.cornelious.busbooking.configerations.services.impl.EmployeeIntentService"
            android:exported="false" />
        <service
            android:name="ac.cj.cornelious.busbooking.configerations.services.impl.BusBoundService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name="ac.cj.cornelious.busbooking.configerations.services.impl.ActivateTripBoundService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name="ac.cj.cornelious.busbooking.configerations.services.impl.SupplierIntentServiceImpl"
            android:exported="false" />
        <service
            android:name="ac.cj.cornelious.busbooking.configerations.services.impl.AccountBoundService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="ac.cj.cornelious.busbooking.configerations.PassengerActivity"
            android:label="@string/title_activity_previewpassenger" />
        <activity
            android:name="ac.cj.cornelious.busbooking.configerations.Previewpassenger"
            android:label="@string/title_activity_previewpassenger" />
        <activity
            android:name="ac.cj.cornelious.busbooking.configerations.DisplayRecords"
            android:label="@string/title_activity_display_records" />
        <activity android:name="ac.cj.cornelious.busbooking.configerations.AvailableBusesActivity" />
        <activity android:name="ac.example.mgijima.bustransportingsystem.LoginActivity" />
        <activity android:name="ac.example.mgijima.bustransportingsystem.SignupActivity"></activity>
    </application>

</manifest>