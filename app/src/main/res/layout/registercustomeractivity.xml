<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="left">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp">

        <EditText
            android:layout_width="96dp"
            android:layout_height="52dp"
            android:id="@+id/txtSearch"
            android:maxLines="@integer/status_bar_notification_info_maxnum"
            android:layout_weight="0.6"
            android:textColor="#363fe4" />
         <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Enter ID"
            android:id="@+id/btnSearch"

            android:layout_weight="0.20"
            android:onClick="SearchByID"
            android:layout_marginTop="-10dp"
             android:layout_marginLeft="10dp"
             android:background="#363fe4" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="96dp"
            android:layout_height="52dp"
            android:text="ID NUmber:"
            android:id="@+id/textView"
            android:layout_weight="0.60"
            android:textColor="@color/abc_primary_text_material_light" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtID"
            android:maxLines="@integer/status_bar_notification_info_maxnum"
            android:textColor="#363fe4" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginLeft="30dp">



    <TextView
        android:layout_width="96dp"
        android:layout_height="52dp"
        android:text="Name:"
        android:id="@+id/textView2"
        android:layout_weight="0.60"
        android:textColor="@color/abc_primary_text_material_light" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtName"
            android:textColor="#363fe4" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginLeft="30dp">
    <TextView
        android:layout_width="96dp"
        android:layout_height="52dp"
        android:text="Surname:"
        android:id="@+id/textView3"
        android:layout_weight="0.60"
        android:textColor="@color/abc_primary_text_material_light" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtSurname"
            android:textColor="#363fe4" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginLeft="30dp">

    <TextView
        android:layout_width="96dp"
        android:layout_height="52dp"
        android:text="Residential Adress:"
        android:id="@+id/street"
        android:layout_weight="0.60"
        android:textColor="@color/abc_primary_text_material_light" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtStreetName"
            android:textColor="#363fe4" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginLeft="30dp">

    <TextView
        android:layout_width="96dp"
        android:layout_height="52dp"
        android:text="City/Town:"
        android:id="@+id/textView5"
        android:layout_weight="0.60"
        android:textColor="@color/abc_primary_text_material_light" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtCity"
            android:textColor="#363fe4" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginLeft="30dp">

    <TextView
        android:layout_width="96dp"
        android:layout_height="52dp"
        android:text="Code/ZIP:"
        android:id="@+id/textView6"
        android:layout_weight="0.60"
        android:textColor="@color/abc_primary_text_material_light" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtCode"
            android:maxLines="4"
            android:textColor="#363fe4" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginLeft="20dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preview"
        android:id="@+id/btnPreview"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.38"
        android:onClick="addPassenger"
        android:background="#363fe4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/btndelte"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.38"
            android:onClick="deletePassenger"
            android:background="#cdcdd6" />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
